<%= render 'navbar' %>
<div class="container-card">
  <div class="card">
<h1 class="banner"><%= @article.title %></h1>
<h3 class="content">"<%= @article.content %>"</h3>
</div>
<div class="buttons">
  <%= link_to edit_article_path, class: "btn btn-outline-success" do %>
    <i class="far fa-edit"></i> Edit
  <% end %>
  <%= link_to article_path, method: :delete, class: "btn btn-outline-danger" do %>
    <i class="far fa-trash-alt"></i> Delete
  <% end %>
  </div>
</div>
